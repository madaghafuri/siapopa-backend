{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "typed-htmx/typed-html",
    "outDir": "./dist",
    "plugins": [{ "name": "typescript-lit-html-plugin" }]
  },
  "exclude": ["node_modules"]
}
