{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": false,
    "skipLibCheck": true,
    "types": ["typed-htmx", "node"],
    "jsx": "react-jsx",
    "jsxImportSource": "typed-htmx/typed-html",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-lit-html-plugin" }]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
